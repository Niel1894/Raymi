<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/history"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context="com.example.desarrollo2.peruraymi.Presentation.activity.HistoriaPeruRaymi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
android:layout_marginBottom="15dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
    <TextView
        android:layout_marginTop="30dp"
        android:textColor="@color/texto"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CONOCE LA HISTORIA"/>

        <TextView
            android:maxLines="2"
            android:lines="2"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:textSize="20sp"
            android:textColor="#B71C1C"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Conoce cómo funciona Perú Raymi!"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            />
</LinearLayout>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:elevation="10dp"
        android:scrollbars="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="160dp">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/_04_walkthought_1_img2"
            />

            <TextView
                android:textColor="@color/redButton"
                android:text="La historia está cerca de ti"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


    </android.support.v7.widget.CardView>

</FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
      <android.support.v7.widget.AppCompatButton
          android:id="@+id/salir"
          android:background="@color/redButton"
          android:layout_marginTop="50dp"
          android:layout_gravity="center"
          android:textColor="#ffffff"
          android:text="salir"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <ImageView
            android:elevation="20dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/_05_menu_img7"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="100dp" />

    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
